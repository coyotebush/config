alignment top_right
background no
border_width 10
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont Inconsolata:size=11
gap_x 10
gap_y 10
minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
double_buffer yes
own_window_argb_visual yes
own_window_argb_value 200
own_window_class Conky
own_window_type desktop
stippled_borders 0
update_interval 3.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
draw_graph_borders no

TEXT
$nodename - $sysname $kernel
$hr
${color grey}Uptime:$color $uptime
${color grey}Battery:$color $battery_short $battery_bar
${color grey}RAM:$color $mem/$memmax - $memperc% ${membar 4}
${color grey}Swap:$color $swap/$swapmax - $swapperc% ${swapbar 4}
${color grey}CPU:$color $cpu% ($freq_g GHz)
${cpugraph -l -t}
${top cpu 1} ${top name 1}
${top cpu 2} ${top name 2}
${top cpu 3} ${top name 3}
${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes
$hr
${color grey}wlp3s0: $color ${addr wlp3s0}
${color grey}enp0s25:$color ${addr enp0s25}
${color grey}Gateway:$color ${gw_ip}
${color grey}Up:$color ${upspeed wlp3s0}  ${color grey}Down:$color ${downspeed wlp3s0}
$hr
 /     $color${fs_used /}/${fs_size /} ${fs_bar 6 /}
 /home $color${fs_used /home}/${fs_size /home} ${fs_bar 6 /home}
