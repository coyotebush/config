##############################################
# Settings
##############################################
background yes
use_xft yes
xftfont Liberation Sans:size=9
xftalpha 1
update_interval 2.0
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type desktop
#own_window_argb_visual yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 150 200
maximum_width 240
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color 656667
default_shade_color 000000
default_outline_color 828282
alignment top_right
gap_x 12
gap_y 56
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no
##############################################
#  Output
##############################################
TEXT
$nodename$alignr$kernel
Uptime:$alignr$uptime

${font Liberation Sans:bold:size=9}MEMORY ${hr 2}\
${font Liberation Sans:normal:size=9}
RAM:$alignr$mem / $memmax
$membar
Swap:$alignr$swap / $swapmax
$swapbar
Disk:$alignr${fs_used /} / ${fs_size /}
${fs_bar /}

${font Liberation Sans:bold:size=9}CPU ${hr 2}\
${font Liberation Sans:normal:size=9}
CPU usage:$alignr$cpu%
Frequency:$alignr$freq_g GHz
${cpugraph -l}
${top name 1}$alignr${top cpu 1}
${top name 2}$alignr${top cpu 2}
${top name 3}$alignr${top cpu 3}

${font Liberation Sans:bold:size=9}NETWORK ${hr 2}\
${font Liberation Sans:normal:size=9}
IP address:$alignr${addr wlan0}
Gateway:$alignr$gw_ip
WLAN:$alignr${wireless_essid wlan0} ${wireless_link_qual_perc wlan0}%
${wireless_link_bar wlan0}
Up:$alignr${upspeed wlan0}/s
${upspeedgraph wlan0 10}
Down:$alignr${downspeed wlan0}/s
${downspeedgraph wlan0 10}

${font Liberation Sans:bold:size=9}BATTERY ${hr 2}\
${font Liberation Sans:normal:size=9}
Status:$alignr$battery
$battery_bar
Time:$alignr$battery_time

${font Liberation Sans:bold:size=9}SHORTCUT KEYS ${hr 2}\
${font Liberation Sans:normal:size=9}
Alt+F2$alignr Run Dialog
Alt+F3$alignr Alt Menu
Super+Alt-Space$alignr Main Menu
Super+Space$alignr Client Menu
Super+Enter$alignr Terminal
Super+f$alignr File Manager
Super+e$alignr Editor
Super+w$alignr Web Browser
Super+m$alignr Mail
Super+h$alignr Task Manager
Super+l$alignr Lock Screen
Super+v$alignr Volume Control
Super+x$alignr Logout
PrtSc$alignr Screenshot
